extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let dishId = toShow._id 
    - let dishName = toShow.dishName
    - let dishPrice = toShow.dishPrice 
    - let mainIngredient = toShow.mainIngredient 
    - let actionid = "/resource/italianDish/" + dishId
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='italianDishAttr mr-3') Dish ID is: 
        div #{dishId} 
      div.row 
        div(class='italianDishAttr mr-3') Dish Name is: 
        div #{dishName} 
      div.row 
        div(class='italianDishAttr mr-3') Dish Price is: 
        div #{dishPrice} 
      div.row 
        div(class='italianDishAttr mr-3') Main Ingredient is: 
        div #{mainIngredient} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/italianDish' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Dont need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/italianDish' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 